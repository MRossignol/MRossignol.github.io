  <style>
    body {
	background-color: black;
	font-size: 18px;
	font-family: Verdana, sans-serif;
	line-height: 1.5em;
    }
    div.textFrame {
	position: absolute;
	height: auto;
	color: white;
	padding: 10px;
	opacity: 0;
	filter: blur(10px);
	transition: all 1s .3s;
    }
    div.textFrame.active {
	opacity: 1;
	filter: blur(0px);
	transition: all 1s;
    }

    div#frame-1 {
	top: 100px;
	left: 200px;
	width: 400px;
    }

    div#frame-2 {
	top: 220px;
	left: 600px;
	width: 300px;
    }

    div#frame-3 {
	top: 400px;
	left: 100px;
	width: 600px;
    }

    div.linkBox {
	width: 100%;
	display: flex;
	flex-direction: row;
	margin-top: 30px;
    }
    div.linkSpacer {
	flex: 1 1 10px;
    }
    a.topLink {
	color: #ccc;
	cursor: pointer;
    }
    div.link.active {
	color: white;
    };
    
    div.link
  </style>
  <script language="javascript">
    let currentSection = -1;
    let openSection = (section) => {
	if (section == currentSection) return;
	if (currentSection >= 0) {
	    document.getElementById('frame-'+currentSection).classList.remove('active');
	    document.getElementById('link-'+currentSection).classList.remove('active');
	}
	document.getElementById('frame-'+section).classList.add('active');
	document.getElementById('link-'+section).classList.add('active');
	currentSection = section;
    };
    
    let handleLinkClick = (event) => {
	event.preventDefault();
	let hrefUrl = event.target.getAttribute('href');
	window.history.pushState({}, event.target.innerHTML, hrefUrl);
	window.dispatchEvent(new Event('popstate'));
    };
    
    window.addEventListener('DOMContentLoaded', () => {
	console.log('DOMContentLoaded');
	document.querySelectorAll('a.topLink').forEach((link) => {
	    link.addEventListener('click', handleLinkClick);
	});
	openSection(1)
	
	window.addEventListener('popstate', function () {
	    console.log(window.location);
	    openSection(window.location.pathname.replace(/^\//, '').replace(/\..*/, ''));
	});
    });
  </script>
  <body>
    <div class="linkBox">
      <div class="linkSpacer"></div>
